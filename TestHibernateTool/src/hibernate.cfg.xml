<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools. -->
<hibernate-configuration>

	<session-factory>
		<property name="dialect">
			org.hibernate.dialect.MySQLDialect
		</property>
		<property name="connection.url">
			jdbc:mysql://localhost:3306/myTest
		</property>
		<property name="connection.username">root</property>
		<property name="connection.password">root</property>
		<property name="connection.driver_class">
			com.mysql.jdbc.Driver
		</property>
		<property name="myeclipse.connection.profile">MySQL</property>
		<property name="show_sql">true</property>
		<!-- 配置让hibernate自动创建关系模型(表) -->
		<property name="hbm2ddl.auto">update</property>
		<!-- 启动二级缓存 -->
		<property name="cache.use_second_level_cache">true</property>
		<!-- 指定使用哪种二级缓存 -->
		<property name="cache.provider_class">org.hibernate.cache.OSCacheProvider</property>
		<!-- 启动缓存效率统计 -->
		<property name="hibernate.generate_statistics">true</property>
		<mapping resource="cn/pku/coolyr/domain/Employee.hbm.xml" />
		<mapping resource="cn/pku/coolyr/domain/Student.hbm.xml" />
		<mapping resource="cn/pku/coolyr/domain/Course.hbm.xml" />
		<mapping resource="cn/pku/coolyr/domain/Studcourse.hbm.xml" />
		<!-- 指定哪个domain启用二级缓存 特别说明二级缓存策略: 
		1. read-only 
		2. read-write 
		3. nonstrict-read-write 
		4. transcational -->
		<class-cache class="cn.pku.coolyr.domain.Employee" usage="read-write" />
		<class-cache class="cn.pku.coolyr.domain.Student" usage="read-write" />
		<class-cache class="cn.pku.coolyr.domain.Course" usage="read-write" />
		<class-cache class="cn.pku.coolyr.domain.Studcourse" usage="read-write" />

	</session-factory>

</hibernate-configuration>